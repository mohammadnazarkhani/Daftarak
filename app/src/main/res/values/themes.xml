<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Daftarak" parent="Theme.Material3.DayNight">

        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>

        <!-- Secondary/accent colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>

        <!-- Background / surface -->
        <item name="colorSurface">@color/secondary_light</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">@color/secondary_light</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary_light</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/CustomToolbar</item>

    </style>

    <!-- Theme applying the base -->
    <style name="Theme.Daftarak" parent="Base.Theme.Daftarak" />

    <!-- Toolbar customization -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Bottom navigation customization -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/secondary</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- No action bar -->
    </style>

</resources>
