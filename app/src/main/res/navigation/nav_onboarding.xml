<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.daftarak.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >

        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />

        <!-- Navigate directly to main after splash if not first time -->
        <action
            android:id="@+id/action_splashFragment_to_notebooksFragment"
            app:destination="@id/notebooksFragment"
            app:popUpTo="@id/nav_onboarding"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.daftarak.ui.fragment.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">

        <action
            android:id="@+id/action_viewPagerFragment_to_notebooksFragment"
            app:destination="@id/notebooksFragment"
            app:popUpTo="@id/nav_onboarding"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>
</navigation>
